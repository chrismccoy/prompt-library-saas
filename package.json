{
  "name": "prompt-library-saas",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:css\" \"npm:dev:server\"",
    "dev:server": "nodemon server.js | pino-pretty",
    "dev:css": "tailwindcss -i ./public/assets/app.scss -o ./public/assets/app.css --watch",
    "build:css": "tailwindcss -i ./public/assets/app.scss -o ./public/assets/app.css --minify",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "start": "node server.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "marked": "^17.0.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "stripe": "^20.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "tailwindcss": "^3.4.19"
  }
}
