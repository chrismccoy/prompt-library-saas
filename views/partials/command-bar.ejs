<div 
    x-data="commandBar()" 
    @keydown.window.cmd.k.prevent="openBar()" 
    @keydown.window.ctrl.k.prevent="openBar()"
    @keydown.window.escape="closeBar()"
    class="relative z-[100]"
    x-cloak
>
    <div x-show="isOpen" x-transition.opacity class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm"></div>

    <div x-show="isOpen" x-transition.scale.95 class="fixed inset-0 flex items-start justify-center pt-24 px-4 sm:pt-40">
        <div @click.away="closeBar()" class="w-full max-w-2xl bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden">
            
            <div class="relative flex items-center p-4 border-b border-gray-100">
                <svg class="h-6 w-6 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                <input 
                    x-ref="searchInput"
                    type="text" 
                    x-model="query" 
                    @input.debounce.300ms="search()"
                    placeholder="Search library, tags, or documentation..." 
                    class="w-full border-none focus:ring-0 text-lg placeholder-gray-400 text-gray-900"
                >
                <div class="flex items-center gap-1.5 ml-3">
                    <kbd class="px-2 py-1 bg-gray-100 border border-gray-200 rounded text-[10px] font-bold text-gray-500">ESC</kbd>
                </div>
            </div>

            <div class="max-h-96 overflow-y-auto p-2">
                <template x-if="results.length > 0">
                    <div class="space-y-1">
                        <template x-for="item in results" :key="item.slug">
                            <a :href="'/library/' + item.slug" class="flex items-center justify-between p-3 hover:bg-indigo-50 rounded-xl transition group">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 rounded-lg bg-gray-100 flex items-center justify-center mr-3 group-hover:bg-white transition">
                                        <svg class="h-5 w-5 text-gray-400 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                                    </div>
                                    <div>
                                        <p class="text-sm font-bold text-gray-900" x-text="item.title"></p>
                                        <p class="text-xs text-gray-400" x-text="item.category"></p>
                                    </div>
                                </div>
                                <span class="text-xs font-black text-indigo-400 opacity-0 group-hover:opacity-100 transition uppercase tracking-widest">Jump to &rarr;</span>
                            </a>
                        </template>
                    </div>
                </template>

                <template x-if="query.length > 1 && results.length === 0 && !loading">
                    <div class="p-8 text-center text-gray-500">
                        <p class="text-sm">No results found for "<span class="font-bold text-gray-900" x-text="query"></span>"</p>
                        <p class="text-xs mt-1">Try searching for keywords like "marketing" or "code".</p>
                    </div>
                </template>
                
                <template x-if="query.length < 2">
                    <div class="p-4">
                        <h4 class="text-[10px] font-black uppercase text-gray-400 tracking-widest mb-3 px-2">Quick Navigation</h4>
                        <div class="grid grid-cols-2 gap-2">
                            <a href="/library" class="p-3 bg-gray-50 hover:bg-indigo-50 rounded-xl text-xs font-bold text-gray-700 transition">All Prompts</a>
                            <a href="/dashboard/my-prompts" class="p-3 bg-gray-50 hover:bg-indigo-50 rounded-xl text-xs font-bold text-gray-700 transition">Private Library</a>
                            <a href="/library/favorites" class="p-3 bg-gray-50 hover:bg-indigo-50 rounded-xl text-xs font-bold text-gray-700 transition">My Favorites</a>
                            <a href="/pricing" class="p-3 bg-gray-50 hover:bg-indigo-50 rounded-xl text-xs font-bold text-gray-700 transition">Upgrade Account</a>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>

<script>
function commandBar() {
    return {
        isOpen: false,
        query: '',
        results: [],
        loading: false,
        openBar() {
            this.isOpen = true;
            this.query = '';
            this.results = [];
            this.$nextTick(() => this.$refs.searchInput.focus());
        },
        closeBar() {
            this.isOpen = false;
        },
        async search() {
            if (this.query.length < 2) {
                this.results = [];
                return;
            }
            this.loading = true;
            try {
                const res = await fetch(`/library/api/search?q=${encodeURIComponent(this.query)}`);
                this.results = await res.json();
            } catch (e) {
                console.error("Search failed", e);
            } finally {
                this.loading = false;
            }
        }
    }
}
</script>
