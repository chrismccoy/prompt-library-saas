<% if (flash && flash.message) { %>
    <div 
        x-data="{ show: true }" 
        x-init="setTimeout(() => { if('<%= flash.type %>' === 'success') show = false }, 5000)"
        x-show="show" 
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform -translate-y-2"
        x-transition:enter-end="opacity-100 transform translate-y-0"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 w-full"
    >
        <div class="relative rounded-2xl p-4 shadow-sm border-2 <%= flash.type === 'error' ? 'bg-red-50 text-red-800 border-red-100' : 'bg-green-50 text-green-800 border-green-100' %>">
            <div class="flex items-center justify-between">
                <div class="flex items-center flex-1">
                    <div class="flex-shrink-0">
                        <% if (flash.type === 'error') { %>
                            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        <% } else { %>
                            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        <% } %>
                    </div>
                    
                    <div class="ml-3">
                        <p class="text-sm font-bold uppercase tracking-wider">
                            <%= flash.type === 'error' ? 'Attention Required' : 'Success' %>
                        </p>
                        <p class="text-sm opacity-90 mt-0.5">
                            <%= flash.message %>
                        </p>
                    </div>
                </div>

                <div class="ml-4 flex-shrink-0 flex">
                    <button 
                        @click="show = false" 
                        type="button" 
                        class="inline-flex rounded-xl p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 transition active:scale-90 <%= flash.type === 'error' ? 'bg-red-100 text-red-500 hover:bg-red-200 focus:ring-red-500' : 'bg-green-100 text-green-500 hover:bg-green-200 focus:ring-green-500' %>"
                    >
                        <span class="sr-only">Dismiss</span>
                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
<% } %>
