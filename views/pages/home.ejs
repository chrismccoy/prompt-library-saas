<%- include('../partials/head') %>

<div class="relative overflow-hidden bg-white">
    <div class="max-w-7xl mx-auto">
        <div class="relative z-10 bg-white pb-8 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
            
            <svg class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white transform translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
                <polygon points="50,0 100,0 50,100 0,100" />
            </svg>

            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                <div class="sm:text-center lg:text-left">
                    <h1 class="text-5xl tracking-tight font-black text-gray-900 sm:text-6xl md:text-7xl leading-none">
                        <span class="block xl:inline">AI Prompts</span>
                        <span class="block text-indigo-600 xl:inline">Engineered for Pros.</span>
                    </h1>
                    <p class="mt-6 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0 leading-relaxed">
                        The ultimate library for ChatGPT, Claude, and Midjourney. Stop guessing and start generating with vetted, professional-grade blueprints. One payment, forever access.
                    </p>
                    
                    <div class="mt-10 sm:flex sm:justify-center lg:justify-start gap-4">
                        
                        <div class="rounded-2xl shadow-xl shadow-indigo-100">
                            <a href="/library" class="w-full flex items-center justify-center px-10 py-4 border border-transparent text-base font-black uppercase tracking-widest rounded-2xl text-white bg-indigo-600 hover:bg-indigo-700 transition active:scale-95 md:text-sm">
                                Browse Library
                            </a>
                        </div>

                        <div class="mt-4 sm:mt-0">
                            <% if (!currentUser) { %>
                                <a href="/register" class="w-full flex items-center justify-center px-10 py-4 border border-gray-200 text-base font-black uppercase tracking-widest rounded-2xl text-gray-700 bg-white hover:bg-gray-50 transition active:scale-95 md:text-sm shadow-sm">
                                    Create Account
                                </a>
                            <% } else if (!hasAccess) { %>
                                <a href="/pricing" class="w-full flex items-center justify-center px-10 py-4 border border-transparent text-base font-black uppercase tracking-widest rounded-2xl text-indigo-700 bg-indigo-50 hover:bg-indigo-100 transition active:scale-95 md:text-sm">
                                    Unlock Lifetime ($<%= product.priceDecimal %>)
                                </a>
                            <% } else { %>
                                <a href="/dashboard" class="w-full flex items-center justify-center px-10 py-4 border border-transparent text-base font-black uppercase tracking-widest rounded-2xl text-indigo-700 bg-indigo-50 hover:bg-indigo-100 transition active:scale-95 md:text-sm">
                                    My Dashboard
                                </a>
                            <% } %>
                        </div>

                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 bg-gray-50 flex items-center justify-center border-l border-gray-100 overflow-hidden">
        <div class="relative w-full h-full flex items-center justify-center">
            <div class="absolute w-96 h-96 bg-indigo-400 rounded-full blur-[120px] opacity-20 animate-pulse"></div>
            <svg class="relative w-64 h-64 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="0.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.675.338a4 4 0 01-2.586.344l-2.096-.419a2 2 0 01-1.056-.547M20 5a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2V7a2 2 0 012-2h16zM4 13h16v7H4v-7z"></path></svg>
        </div>
    </div>
</div>

<div class="bg-gray-50 border-y border-gray-100 py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <p class="text-center text-[10px] font-black uppercase tracking-[0.4em] text-gray-400 mb-8">Trusted by 500+ Prompt Engineers</p>
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4 lg:grid-cols-4 items-center opacity-40 grayscale">
            <div class="flex justify-center text-xl font-black italic">OPENAI</div>
            <div class="flex justify-center text-xl font-black italic">ANTHROPIC</div>
            <div class="flex justify-center text-xl font-black italic">GOOGLE</div>
            <div class="flex justify-center text-xl font-black italic">META</div>
        </div>
    </div>
</div>

<%- include('../partials/foot') %>
