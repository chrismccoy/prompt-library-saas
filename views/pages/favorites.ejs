<%- include('../partials/head') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="border-b border-gray-200 pb-5 mb-8">
        <h3 class="text-3xl leading-6 font-bold text-gray-900">My Favorites</h3>
        <p class="mt-2 max-w-4xl text-sm text-gray-500">Prompts you have saved for later.</p>
    </div>

    <% if (prompts.length === 0) { %>
        <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No favorites yet</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by browsing the library.</p>
            <div class="mt-6">
                <a href="/library" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    Go to Library
                </a>
            </div>
        </div>
    <% } else { %>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <% prompts.forEach(prompt => { %>
                <a href="/library/<%= prompt.slug %>" class="group block bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition duration-200">
                    <div class="p-6">
                        <div class="text-sm text-indigo-600 font-bold mb-2"><%= prompt.category_name %></div>
                        <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-600"><%= prompt.title %></h3>
                        <div class="mt-4 flex items-center text-xs text-gray-400">
                            Saved prompt
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('../partials/foot') %>
