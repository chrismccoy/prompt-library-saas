<%- include('../partials/head') %>

<div class="bg-gray-50 py-16 sm:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-base font-semibold text-indigo-600 tracking-wide uppercase">Upgrade</h2>
    <p class="mt-1 text-4xl font-black text-gray-900 sm:text-5xl lg:text-6xl">Lifetime Access</p>
    <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">One-time payment. Unlimited possibilities.</p>

    <div class="mt-16 max-w-lg mx-auto bg-white rounded-3xl shadow-2xl border-2 border-indigo-600 overflow-hidden" x-data="{ provider: 'stripe' }">
      <div class="p-8 md:p-12 text-left">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-black text-gray-900">Pro License</h3>
          <span class="bg-indigo-100 text-indigo-700 text-xs font-black px-3 py-1 rounded-full uppercase tracking-wider">Lifetime</span>
        </div>

        <p class="text-5xl font-black text-gray-900 mb-8">$<%= product.priceDecimal %></p>

        <ul class="space-y-4 mb-10 text-gray-600">
          <li class="flex items-start gap-3 font-medium">
            <svg class="h-6 w-6 text-indigo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
            </svg>
            <span>Full access to all current prompts</span>
          </li>
          <li class="flex items-start gap-3 font-medium">
            <svg class="h-6 w-6 text-indigo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
            </svg>
            <span>Unlimited downloads (.txt)</span>
          </li>
          <li class="flex items-start gap-3 font-medium">
            <svg class="h-6 w-6 text-indigo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
            </svg>
            <span>Personal private prompt library</span>
          </li>
        </ul>

        <% if (locals.currentUser) { %>
        <form action="/checkout" method="POST" class="space-y-6">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="hidden" name="provider" :value="provider">

          <div>
            <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-4">Payment Method</label>
            <div class="grid grid-cols-2 gap-4">
              <button type="button" @click="provider = 'stripe'" :class="provider === 'stripe' ? 'border-indigo-600 ring-2 ring-indigo-600 bg-indigo-50' : 'border-gray-200'" class="flex flex-col items-center justify-center p-4 border-2 rounded-2xl transition-all">
                <span class="text-[10px] font-black uppercase tracking-widest text-gray-900">Card Payment</span>
              </button>
              <button type="button" @click="provider = 'paypal'" :class="provider === 'paypal' ? 'border-indigo-600 ring-2 ring-indigo-600 bg-indigo-50' : 'border-gray-200'" class="flex flex-col items-center justify-center p-4 border-2 rounded-2xl transition-all">
                <span class="text-[10px] font-black uppercase tracking-widest text-gray-900">PayPal</span>
              </button>
            </div>
          </div>

          <div x-data="{ hasCode: false }">
            <button type="button" @click="hasCode = !hasCode" class="text-[10px] font-black uppercase text-indigo-500 hover:text-indigo-700 tracking-widest mb-3">Add promo code</button>
            <input x-show="hasCode" x-transition type="text" name="coupon_code" placeholder="ENTER CODE" class="w-full mb-4 p-3 border border-gray-200 rounded-xl uppercase font-black text-center focus:ring-indigo-500">
            <button type="submit" class="w-full bg-indigo-600 text-white py-4 rounded-2xl font-black uppercase tracking-widest shadow-xl hover:bg-indigo-700 transition active:scale-95">Complete Purchase</button>
          </div>
        </form>
        <% } else { %>
        <div class="mt-8">
          <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mb-4">Join our community to buy</p>
          <a href="/register" class="block w-full bg-indigo-600 text-white py-4 rounded-2xl font-black uppercase tracking-widest text-center shadow-xl hover:bg-indigo-700 transition active:scale-95">
            Create Account & Upgrade
          </a>
          <p class="text-center mt-4 text-xs text-gray-400">
            Already have an account? <a href="/login" class="text-indigo-600 hover:underline">Log in</a>
          </p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/foot') %>
