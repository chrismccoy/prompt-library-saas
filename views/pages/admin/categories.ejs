<%- include('../../partials/head') %>
<%- include('../../partials/admin-nav') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="md:flex md:items-center md:justify-between mb-8">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl">Categories</h2>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
        <div>
            <div class="bg-white shadow sm:rounded-lg p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Add New Category</h3>
                <form action="/admin/categories" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" name="name" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border p-2">
                    </div>
                    <button type="submit" class="mt-4 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                        Create
                    </button>
                </form>
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="bg-white shadow overflow-hidden sm:rounded-md">
                <ul class="divide-y divide-gray-200">
                    <% categories.forEach(c => { %>
                        <li class="px-4 py-4 flex items-center justify-between sm:px-6">
                            <div>
                                <p class="text-sm font-medium text-indigo-600 truncate"><%= c.name %></p>
                                <p class="text-xs text-gray-500">slug: <%= c.slug %></p>
                            </div>
                            <form action="/admin/categories/<%= c.id %>/delete" method="POST" onsubmit="return confirm('Delete this category?')">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="text-sm text-red-600 hover:text-red-900">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/foot') %>
