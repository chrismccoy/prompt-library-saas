<%- include('../partials/head') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-12">
        
        <aside class="py-6 lg:col-span-3 space-y-6">
            <nav class="space-y-2">
                <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 text-sm font-black uppercase tracking-widest border-l-4 border-indigo-600 bg-indigo-50 text-indigo-700">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
                    Overview
                </a>
                <a href="/dashboard/my-prompts" class="flex items-center gap-3 px-4 py-3 text-sm font-bold text-gray-500 hover:bg-gray-100 rounded-lg transition">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
                    My Library
                </a>
                <a href="/dashboard/collections" class="flex items-center gap-3 px-4 py-3 text-sm font-bold text-gray-500 hover:bg-gray-100 rounded-lg transition">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/></svg>
                    Collections
                </a>
                <a href="/dashboard/settings" class="flex items-center gap-3 px-4 py-3 text-sm font-bold text-gray-500 hover:bg-gray-100 rounded-lg transition">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37a1.724 1.724 0 002.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                    Settings
                </a>
            </nav>

            <% if (!hasAccess) { %>
                <div class="bg-indigo-600 rounded-2xl p-6 text-white shadow-xl shadow-indigo-100">
                    <h4 class="font-black uppercase tracking-widest text-xs text-indigo-200">Upgrade to Pro</h4>
                    <p class="text-sm mt-2 leading-relaxed">Get unlimited downloads and the private workspace.</p>
                    
                    <form action="/checkout" method="POST" class="mt-6 space-y-3">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input 
                            type="text" 
                            name="coupon_code" 
                            placeholder="CODE..." 
                            class="w-full bg-indigo-500 border-none rounded-xl text-xs font-black uppercase p-3 placeholder-indigo-300 focus:ring-white"
                        >
                        <button type="submit" class="w-full bg-white text-indigo-600 py-3 rounded-xl font-black uppercase text-xs shadow-lg active:scale-95 transition">
                            Unlock Now
                        </button>
                    </form>
                </div>
            <% } %>
        </aside>

        <div class="lg:col-span-9 space-y-8">
            <div class="bg-indigo-900 rounded-[2.5rem] p-8 md:p-12 text-white relative overflow-hidden shadow-2xl">
                <div class="relative z-10">
                    <h1 class="text-4xl font-black tracking-tight">Howdy, <%= currentUser.username %>!</h1>
                    <p class="mt-3 text-lg text-indigo-200 font-medium">Your creative hub is ready. You currently have <%= purchases.length %> active licenses.</p>
                    <div class="mt-10 flex flex-wrap gap-4">
                        <a href="/library" class="bg-white text-indigo-900 px-8 py-3 rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-indigo-50 transition shadow-xl">Catalog</a>
                        <a href="/dashboard/my-prompts/new" class="bg-indigo-500/50 backdrop-blur-md text-white px-8 py-3 rounded-2xl font-black uppercase tracking-widest text-xs border border-indigo-400">Add New</a>
                    </div>
                </div>
                <div class="absolute -top-20 -right-20 w-80 h-80 bg-indigo-500 rounded-full blur-[100px] opacity-20"></div>
            </div>

            <div class="grid gap-8 md:grid-cols-2">
                <div class="bg-white rounded-3xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="p-6 border-b border-gray-50 flex justify-between items-center bg-gray-50/50">
                        <h3 class="font-black uppercase tracking-widest text-[10px] text-gray-400">Recent Exports</h3>
                        <svg class="w-4 h-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                    </div>
                    <% if (downloads.length === 0) { %>
                        <div class="p-12 text-center text-gray-400 text-xs font-medium italic leading-relaxed">You haven't exported any prompts yet. Visit the library to get started.</div>
                    <% } else { %>
                        <ul class="divide-y divide-gray-50">
                            <% downloads.forEach(d => { %>
                                <li class="px-6 py-5 hover:bg-gray-50 transition group">
                                    <div class="flex justify-between items-center">
                                        <a href="/library/<%= d.slug %>" class="text-sm font-bold text-gray-900 group-hover:text-indigo-600 transition"><%= d.title %></a>
                                        <span class="text-[10px] font-black uppercase text-gray-300"><%= new Date(d.created_at).toLocaleDateString() %></span>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>
                </div>

                <div class="bg-white rounded-3xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="p-6 border-b border-gray-50 flex justify-between items-center bg-gray-50/50">
                        <h3 class="font-black uppercase tracking-widest text-[10px] text-gray-400">Billing History</h3>
                    </div>
                    <% if (purchases.length === 0) { %>
                        <div class="p-12 text-center text-gray-400 text-xs italic leading-relaxed">No transactions found.</div>
                    <% } else { %>
                        <ul class="divide-y divide-gray-50">
                            <% purchases.forEach(p => { %>
                                <li class="px-6 py-5 flex justify-between items-center">
                                    <div>
                                        <p class="text-sm font-bold text-gray-900">Lifetime License</p>
                                        <p class="text-[10px] text-gray-400 font-mono mt-0.5"><%= p.provider_order_id.slice(-10) %>...</p>
                                    </div>
                                    <div class="text-right">
                                        <span class="text-sm font-black text-indigo-600">$<%= (p.amount_cents / 100).toFixed(2) %></span>
                                        <p class="text-[9px] font-black uppercase text-gray-300 mt-0.5"><%= new Date(p.created_at).toLocaleDateString() %></p>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>
                </div>
            </div>

        </div>
    </div>
</div>

<%- include('../partials/foot') %>
